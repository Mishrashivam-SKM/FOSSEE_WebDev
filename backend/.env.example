# =====================================================
# Backend Environment Configuration
# =====================================================
# Copy this file to .env and update values for your environment
# NEVER commit the actual .env file to version control

# Django Settings
# ----------------
# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-generate-new-one-for-production

# Environment: development | production
DJANGO_SETTINGS_MODULE=config.settings.development

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (for production - uses SQLite by default in development)
# ----------------
# DATABASE_URL=postgres://user:password@localhost:5432/fossee_db

# CORS Settings (for production)
# ----------------
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Settings
# ----------------
# MAX_UPLOAD_SIZE_MB=10
